<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CollapsedToolbarTextAppearance" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="LabelledMarqueeEditTextAppearanceLight">
        <item name="baseColor">@android:color/white</item>
        <item name="highlightColor">@color/colorAccent</item>
    </style>

    <style name="LabelledMarqueeEditTextAppearanceDark">
        <item name="baseColor">@android:color/black</item>
        <item name="highlightColor">@color/colorPrimary</item>
    </style>

</resources>
